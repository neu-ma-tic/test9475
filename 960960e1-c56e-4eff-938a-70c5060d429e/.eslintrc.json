{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2019
  },
  "rules": {
    "indent": ["warn", 4],
    "quotes": ["warn", "single"],
    "semi": ["warn", "never"],
    "eqeqeq": "error"
  },
  "ignorePatterns": ["backup/", "node_modules/", "logs/", "*.sql"]
}
